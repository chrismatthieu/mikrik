<robot name="mikrik"
	xmlns:xacro="http://www.ros.org/wiki/xacro">
	<!-- right_wheel -->
	<link name="mikrik_right_wheel">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 0" />
			<geometry>
				<cylinder length="0.026" radius="0.0325"/>
			</geometry>
			<material name="Green" />
		</visual>
		<collision>
			<origin xyz="0 0 0" rpy="0 0 0" />
			<geometry>
				<cylinder length="0.026" radius="0.0325"/>
			</geometry>
		</collision>
	</link>
	<!-- right_wheel_geometry -->
	<link name="right_wheel">
		<visual>
			<origin xyz="0 0 0" rpy="${PI/2} 0 0" />
			<geometry>
				<cylinder length="${wheel_width}" radius="${wheel_radius}"/>
			</geometry>
			<material name="Green" />
		</visual>
		<collision>
			<origin xyz="0 0 0" rpy="${PI/2} 0 0" />
			<geometry>
				<cylinder length="${wheel_width}" radius="${wheel_radius}"/>
			</geometry>
		</collision>
	</link>
	<joint name="right_wheel_to_mikrik_right_wheel" type="fixed">
		<origin xyz="0 0 0" rpy="0 0 0" />
		<parent link="right_wheel" />
		<child link="mikrik_right_wheel" />
	</joint>
	<joint name="right_wheel_to_base" type="continuous">
		<origin xyz="0 -0.068 0.0145" rpy="0 0 0" />
		<parent link="mikrik_base" />
		<child link="right_wheel" />
		<axis xyz="0 1 0" />
	</joint>
</robot>
